{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ESNext"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"]
}
